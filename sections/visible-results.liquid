{{ 'visible-results.css' | asset_img_url | stylesheet_tag }}

<div class="wrapper" style="background-color: {{ section.settings.bg_color }} " >
    <div class="image">
        {{- section.settings.image | image_url: width: section.settings.image.width | image_tag: loading: 'lazy', decoding: 'async' , draggable: false -}}
    </div>
    <div>
        <h2>{{ section.settings.heading }}</h2>
        <div class="subheading">{{ section.settings.subheading }}</div>
    </div>
</div>

{% schema %}
    {
        "name": "Visible Results",
        "class": "visible-results",
        "settings": [
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            },
            {
                "type": "color",
                "id": "bg_color",
                "label": "Background Color"
            },
            {
                "type": "text",
                "id": "heading",
                "label": "Heading"
            },
            {
                "type": "text",
                "id": "subheading",
                "label": "Subheading"
            }
        ],
        "blocks": [
            {
                "type": "slide",
                "name": "Column Text",
                "settings": [
                    {
                        "type": "text",
                        "id": "top_text",
                        "label": "Top Text"
                    },
                    {
                        "type": "text",
                        "id": "bottom_text",
                        "label": "Bottom Text"
                    }
                ]
            }
        ],
            
        "presets": [
            {
               "name": "Visible Results"                                
            }
        ]
    }
{% endschema %}

