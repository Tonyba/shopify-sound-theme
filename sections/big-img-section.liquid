{{ 'big-img-section.css' | asset_url | stylesheet_tag }}

<div class="container">
    <div class="section-wrapper-margin">
        <div class="flex align-item-center">
            <div class="w-70">
                <h2>{{ section.settings.heading }}</h2>
                <p>{{ section.settings.text }}</p>
            </div>
            <div class="w-30">
                {{- section.settings.image | image_url: width: section.settings.image.width | image_tag: loading: 'lazy', decoding: 'async' , draggable: false -}}
            </div>
        </div>
    
    </div>

  
</div>

{% schema %}
    {
        "name": "Big Image Section",
        "class": "big-img-section",
        "settings": [
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            },
            {
                "type": "text",
                "id": "heading",
                "label": "Heading"
            },
            {
                "type": "textarea",
                "id": "text",
                "label": "Text"
            }
        ],
        "presets": [
            {
              "name": "Big Image Section"
            }
        ]
    }
{% endschema %}
