{{ 'blog_post_loop.css' | asset_url | stylesheet_tag }}


<div class="container">
    <div class="grid 2-cols">
        
    </div>
    <div class="grid 5-cols">
        {% for post in section.settings.blog_posts %}

            {% render 'blog_post' post: post %}

        {% endfor %}
    </div>
</div>


{% schema %}
    {
        "name": "Home Blogs",
        "settings": [
            {
                "type": "text",
                "id": "heading",
                 "label": "Heading"
            },
            {
                "type": "text",
                "label": "Button text",
                "id": "btn_text"
            },
            {
                "type": "url",
                "label": "Button Link",
                "id": "btn_link"
            },
            {
                  "type": "blog",
                   "id": "blog_posts",
                   "label": "blog"   
            }
        ]
    }
{% endschema %}