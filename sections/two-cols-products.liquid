
{{ 'two-cols-products.css' | asset_url | stylesheet_tag }}

<div
  class="products-wrapper"
  style="background-color: {{ section.settings.bg_color }};"
>
  <div class="container">
    <h2 style="text-align: {{ section.settings.title_alignment }}">
      {{ section.settings.title }}
    </h2>
    <div class="grid cols-2">
      {% for product in section.settings.products %}
        <li class="grid-item">
            {%- render 'product-card', product: product, stacked: false, background: "transparent", text_color: "black", show_badges: true -%}
        </li>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
    {
        "name": "Two Columns Products",
        "class": "two-cols-products-section",
        "settings": [
            {
                "type": "text",
                "id": "title",
                "label": "Title"
              },
              {
                "type": "text_alignment",
                "id": "title_alignment",
                "label": "Alignment"
              },
            {
                "type": "product_list",
                "id": "products",
                "label": "Products",
                "limit": 2
            },
            {
                "type": "color",
                "label": "Background Color",
                "id": "bg_color",
                "default": "transparent"
              }
        ],
        "presets": [
            {
              "name": "Two Columns Products",
              "category": "Text"
            }
          ]
    }
{% endschema %} 