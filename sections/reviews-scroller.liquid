          });

    });*/
    
})();
</script>

 
{% schema %}
    {
        "name": "Reviews Scroller",
        "class": "reviews-scroller",
        "tag": "section",
        "blocks": [
            {
                "type": "slide",
                "name": "Review",
                "settings": [
                    {
                        "type": "text",
                        "label": "Review Title",
                        "id": "review_title"
                    },
                    {
                        "type": "text",
                        "label": "Review Author",
                        "id": "author"
                    },
                    {
                        "type": "textarea",
                        "label": "Review Text",
                        "id": "review_text"
                    },
                    {
                        "type": "image_picker",
                        "label": "Review Image",
                        "id": "review_img"
                    }
                ]
            }
        ],
        "settings": [
            {
                "type": "checkbox",
                "id": "is_autoscroll",
                "default": true,
                "label": "Autoscroll",
                "info": "It'll make the carousel autoscroll"
            },
            {
                "type": "text",
                "id": "heading",
                "label": "Heading",
                "default": "Quick links"
            },
            {
                "type": "textarea",
                "id": "text",
                "label": "Text",
                "default": "Quick links"
            },
            {
                "type": "header",
                "content": "button"
            },
            {
                "type": "text",
                "id": "btn_text",
                "label": "Button Text"
            },
            {
                "type": "url",
                "id": "btn_link",
                "label": "Button Link"
            }
        ],
        "presets": [
            {
                "name": "Reviews Scroller"
            }
        ]

    }
{% endschema %}