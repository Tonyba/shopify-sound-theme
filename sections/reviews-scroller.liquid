
{{ "reviews-scroller.css" | asset_url | stylesheet_tag }}

{%liquid
    assign s = section.settings

    assign heading = s.heading
    assign text = s.text
    assign btn_text = s.btn_text
    assign btn_link = s.btn_link
%}

<div class="container">
    <div class="grid cols-2 gap-40">
        <div class="grid-item">
            <h2>{{heading}}</h2>
            <p>{{ text }}</p>
            {% if btn_text != blank  %}
            <a type="button" class="button" href="{{ btn_link }}">{{ btn_text }}</a>
            {% endif %}
        </div>
        <div class="grid-item"></div>
    </div>
</div>



 
{% schema %}
    {
        "name": "Reviews Scroller",
        "class": "reviews-scroller",
        "tag": "section",
        "blocks": [
            {
                "type": "slide",
                "name": "Review",
                "settings": [
                    {
                        "type": "text",
                        "label": "Review Title",
                        "id": "review_title"
                    },
                    {
                        "type": "textarea",
                        "label": "Review Text",
                        "id": "review_text"
                    }
                ]
            }
        ],
        "settings": [
            {
                "type": "text",
                "id": "heading",
                "label": "Heading",
                "default": "Quick links"
            },
            {
                "type": "textarea",
                "id": "text",
                "label": "Text",
                "default": "Quick links"
            },
            {
                "type": "header",
                "content": "button"
            },
            {
                "type": "text",
                "id": "btn_text",
                "label": "Button Text"
            },
            {
                "type": "url",
                "id": "btn_link",
                "label": "Button Link"
            }
        ],
        "presets": [
            {
                "name": "Reviews Scroller"
            }
        ]

    }
{% endschema %}