{{ 'two-cols-price-table-with-image.css' | asset_url | stylesheet_tag }}

<div class="section-wrapper" style="background-color: {{ section.settings.bg_color }}" >

    <div class="container">
        
        <div class="grid cols-2 gap-40 align-item-center">
            <div class="grid-item relative">
                <div class="top-badge"> <span class="badge-icon"> {% render 'icon-piggy' %} </span> Save 90%!</div>
                {{- section.settings.image | image_url: width: section.settings.image.width | image_tag: loading: 'lazy', decoding: 'async' , draggable: false -}}
            </div>
            <div class="grid-item">
                <div class="subheading">{{ section.settings.subheading }}</div>
                <h2 class="heading" >{{ section.settings.heading }}</h2>
                <p>{{ section.settings.text }}</p>

                <div class="table-price">
                    {% for item in section.blocks %}
                        <div class="table-item {% if forloop.index == section.blocks.size %} is-last {% endif %}">
                            {{ item.settings.item_text }}
                            <span class="table-price-item">${{ item.settings.price  }}</span>
                        </div>
                    {% endfor %}
    
                </div>

                <p class="after-table">
                    {{ section.settings.after_table_text }}
                </p>
                
            </div>
        </div>
        
    </div>

</div>

{% schema %}
    {
        "name": "Price Table with Image",
        "class": "price-table-with-image",
        "settings": [
            {
                "type": "color",
                "id": "bg_color",
                "label": "Background Color"
            },
            {
                "type": "image_picker",
                "label": "Image",
                "id": "image"
            },
            {
                "type": "text",
                "id": "heading",
                "label": "Heading"
            },
            {
                "type": "text",
                "id": "subheading",
                "label": "Subheading"
            },
            {
                "type": "textarea",
                "id": "text",
                "label": "Text"
            },
            {
                "type": "textarea",
                "id": "after_table_text",
                "label": "After table text"
            }
        ],
        "blocks": [
            {
                "type": "slide",
                "name": "Table Item",
                "settings": [
                    {
                        "type": "text",
                        "id": "item_text",
                        "label": "Item Text"
                    },
                    {
                        "type": "number",
                        "id": "price",
                        "label": "Price"
                    }
                ]
            }
        ],
        "presets": [
            { 
                "name": "Two Cols Price Table with Image"
            }
        ]
    }
{% endschema %}
