<div class="section-wrapper">

    <div class="container">
        
        <div class="grid 2-cols">
            <div class="grid-item relative">
            </div>
            <div class="grid-item">
            </div>
        </div>
        
    </div>

</div>

{% schema %}
    {
        "name": "Price Table with Image",
        "class": "price-table-with-image",
        "settings": [
            {
                "type": "color",
                "id": "bg_color",
                "label": "Background Color"
            },
            {
                "type": "image_picker",
                "label": "Image",
                "id": "image"
            },
            {
                "type": "text",
                "id": "heading",
                "label": "Heading"
            },
            {
                "type": "text",
                "id": "subheading",
                "label": "Subheading"
            },
            {
                "type": "textarea",
                "id": "text",
                "label": "Text"
            },
            {
                "type": "textarea",
                "id": "after_table_text",
                "label": "After table text"
            }
        ],
        "blocks": [
            {
                "type": "slide",
                "name": "Table Item",
                "settings": [
                    {
                        "type": "text",
                        "id": "item_text",
                        "label": "Item Text"
                    },
                    {
                        "type": "number",
                        "id": "price",
                        "label": "Price"
                    }
                ]
            }
        ],
        "presets": [
            { 
                "name": "Two Cols Price Table with Image"
            }
        ]
    }
{% endschema %}
