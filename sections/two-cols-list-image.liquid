<div class="section-wrapper">

    <div class="grid cols-2 gap-40">
        <div class="grid-item">
            <h2>{{ section.settings.heading }}</h2>
            <p>{{ section.settings.text }}</p>
            <ul>
                {% for item in section.settings %}
                    
                {% endfor %}
            </ul>
        </div>
        <div class="grid-item"></div>
    </div>

</div>

{% schema %}
    {
        "name": "2 Cols List With Image",
        "class": "col-list-with-image",
        "settings": [
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            },
            {
                "type": "text",
                "id": "heading",
                "label": "Heading"
            },
            {
                "type": "textarea",
                "id": "text",
                "label": "Text"
            }
        ],
        "blocks": [
            {
                "type": "slide",
                "name": "List Item",
                "settings": [
                    {
                        "type": "text",
                        "id": "text",
                        "label": "Text"
                    }
                ]
                
            }
        ],
        "presets": [
            {
               "name": "2 Columns List With Image"   
            }
        ]
    }
{% endschema %}