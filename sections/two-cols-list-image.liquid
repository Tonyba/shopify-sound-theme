{%- render 'css_async', css: 'two-cols-list-image.css', section_index: section.index -%}

<div class="section-wrapper-padding" style="background-color: {{ section.settings.bg_Color }}">

    <div class="grid cols-2 gap-40 table-cols-1 container align-item-center">
        <div class="grid-item">
            <h2>{{ section.settings.heading }}</h2>
            <p>{{ section.settings.text }}</p>
            <ul class="icon-list">
                {% for item in section.blocks %}
                    <li class="icon-list-item"> 
                        <span class="icon">{% render 'icon-circle-check' %}</span>  
                        <span class="text">{{ item.settings.text }}</span> 
                    </li>
                {% endfor %}
            </ul>
        </div>
        <div class="grid-item">
            {{- section.settings.image | image_url: width: section.settings.image.width | image_tag: loading: 'lazy', decoding: 'async' , draggable: false -}}
        </div>
    </div>

</div>

{% schema %}
    {
        "name": "2 Cols List With Image",
        "class": "col-list-with-image",
        "settings": [
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            },
            {
                "type": "color",
                "default": "#F3F3F3",
                "id": "bg_Color",
                "label": "Background Color"
            },
            {
                "type": "text",
                "id": "heading",
                "label": "Heading"
            },
            {
                "type": "textarea",
                "id": "text",
                "label": "Text"
            }
        ],
        "blocks": [
            {
                "type": "slide",
                "name": "List Item",
                "settings": [
                    {
                        "type": "text",
                        "id": "text",
                        "label": "Text"
                    }
                ]
                
            }
        ],
        "presets": [
            {
               "name": "2 Columns List With Image"   
            }
        ]
    }
{% endschema %}