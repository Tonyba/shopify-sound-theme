
<div class="section-wrapper-padding" style="background: {{ section.settings.bg_color }}">
    <div class="container">
        <div class="image">
            {{- section.settings.image | image_url: width: section.settings.image.width | image_tag: loading: 'lazy', decoding: 'async' , draggable: false -}}
        </div>
        <div class="inner-container">
            <h2>{{ section.settings.heading }}</h2>
            <div class="subheading">{{ section.settings.subheading }}</div>
            <p>{{ section.settings.text }}</p>
        </div>
    </div>
</div>

<div class="container">
    <div class="grid cols-4">
        {% for feauture in section.blocks %}
            <div class="grid-item">
                <span class="icon">{{ feauture.settings.icon }}</span>
                <h3>{{ feauture.settings.text }}</h3>
            </div>
        {% endfor %}
    </div>
</div>


{% schema %}
    {
        "name": "Product Features",
        "class": "product-features",
        "settings": [
            {
                "type": "color_background",
                "id": "bg_color",
                "label": "Background Color"
            },
            {
                "type": "color_background",
                "id": "bg_features_color",
                "label": "Features Background Color"
            },
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            },
            {
                "type": "text",
                "id": "heading",
                "label": "Heading"
            },
            {
                "type": "text",
                "id": "subheading",
                "label": "Subheading"
            },
            {
                "type": "textarea",
                "id": "text",
                "label": "text"
            }
        ],
        "blocks": [
            {
                "type": "slide",
                "name": "Feature",
                "settings": [
                    {
                        "type": "html",
                        "id": "icon",
                        "label": "Svg Icon"
                    },
                    {
                        "type": "text",
                        "id": "text",
                        "label": "Text"
                    }
                ]
            }
        ],
        "presets": [
            {
               "name": "Product Features"
            }
        ]
    }
{% endschema %}
