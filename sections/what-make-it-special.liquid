{{ 'what-make-it-special.css' | asset_url | stylesheet_tag }}

<div class="section-wrapper">
    <div class="container">
        
        <div class="grid cols-2 gap-40">
            <div class="grid-item">
                <figure>
                    {{- section.settings.image | image_url: width: section.settings.image.width | image_tag: loading: 'lazy', decoding: 'async' , draggable: false -}}
                </figure>
            </div>
            <div class="grid-item">
                <h2>{{ section.settings.heading }}</h2>
                <div class="heading-divider"></div>

                <div class="subsections">
                    {% for item in section.blocks %}
                        <div class="subsection">
                            <h3>{{ item.settings.title }}</h3>
                            <p>{{ item.settings.text }}</p>
                        </div>
                    {% endfor %}
                </div>
               

                <div class="info-text">
                    <div class="icon">{% render 'icon-info' %}</div>
                    {{ section.settings.info_text }}
                </div>
            </div>
        </div>

    </div>
</div>

{% schema %}
    {
        "name": "What Makes It Special",
        "class": "what-make-it-special",
        "settings": [
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            },
            {
                "type": "text",
                "id": "heading",
                "label": "Heading"
            },
            {   
                "type": "richtext",
                "id": "info_text",
                "label": "Info Text"
            }
        ],
        "blocks": [
            {
                "type": "slide",
                "name": "Sub Section",
                "settings": [
                    {
                        "type": "text",
                        "id": "title",
                        "label": "Title"
                    },
                    {
                        "type": "textarea",
                        "id": "text",
                        "label": "Text"
                    }
                ]
            }
        ],
        "presets": [
            {
              "name": "What Makes It Special"
            }
        ]
    }
{% endschema %}