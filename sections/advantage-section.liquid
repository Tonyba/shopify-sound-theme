

<div class="container">
    <div class="grid cols-2">
        <div class="grid-item">
            <div class="subheading">{{ section.settings.subheading }}</div>
            <h2>{{ section.settings.heading }}</h2>
        </div>
        <div class="grid-item">
            {% for item in section.blocks %}
                <div class="item flex gap-20">
                    <div class="icon">{% render 'icon-sun' %}</div>
                    <div class="content">
                        <h3>{{ item.settings }}</h3>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>


{% schema %}
    {
        "name": "Advantage Section",
        "class": "advantage-section",
        "settings": [
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            },
            {
                "type": "number",
                "id": "img_max_height",
                "label": "Image Max Height",
                "default": 0
            },
            {
                "type": "text",
                "id": "heading",
                "label": "Heading"
            },
            {
                "type": "text",
                "id": "subheading",
                "label": "Subheading"
            }
        ],
        "blocks": [
            {
                "type": "slide",
                "name": "Item",
                "settings": [
                    {
                        "type": "text",
                        "id": "title",
                        "label": "Title"
                    },
                    {
                        "type": "textarea",
                        "id": "text",
                        "label": "Text"
                    }
                ]
            }
        ],
        "presets": [
            {
              "name": "Advantage Section"
            }
        ]
    }
{% endschema %}


