

<div class="container">
    <div class="grid cols-2">
        <div class="grid-item">
            <div class="subheading">{{ section.settings.subheading }}</div>
            <h2>{{ section.settings.heading }}</h2>
        </div>
        <div class="grid-item">
            {% for item in section.blocks %}
                
            {% endfor %}
        </div>
    </div>
</div>


{% schema %}
    {
        "name": "Advantage Section",
        "class": "advantage-section",
        "settings": [
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            },
            {
                "type": "number",
                "id": "img_max_height",
                "label": "Image Max Height",
                "default": 0
            },
            {
                "type": "text",
                "id": "heading",
                "label": "Heading"
            },
            {
                "type": "text",
                "id": "subheading",
                "label": "Subheading"
            }
        ],
        "blocks": [],
        "presets": [
            {
              "name": "Advantage Section"
            }
        ]
    }
{% endschema %}


