

<div class="flex">
    <div class="w-50"></div>
    <div class="w-50"></div>
</div>

{% schema %}
    {
        "name": "Hightlight List",
        "class": "hightlist-list",
        "settings": [
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            },
            {
                "type": "text",
                "id": "heading",
                "label": "Heading"
            },
            {
                "type": "text",
                "id": "subheading",
                "label": "Subheading"
            }
        ],
        "blocks": [
            {
                "type": "slide",
                "name": "item",
                "settings": [
                    {
                        "type": "html",
                        "id": "svg_icon",
                        "label": "Svg Icon"
                    },
                    {
                        "type": "text",
                        "id": "title",
                        "label": "Title"
                    },
                    {
                        "type": "textarea",
                        "id": "text",
                        "label": "Text"
                    }
                ]
            }
        ],
        "presets": [
            {
              "name": "Hightlight List"
            }
        ]
    }
{% endschema %}