
<div class="section-wrapper-padding section-wrapper-margin" style="background-color: {{ section.settings.bg_color }}">

    <div class="container">
        
        <h2>{{ section.settings.heading }}</h2>

        {% for item in collection %}
            {% for tab in section.blocks %}
                <button data-target-id="{{ tab.id }}" class="tab-header-btn{% if forloop.index == 1 %} active{% endif %}">{{ tab.settings.title }}</button>
            {% endfor %}    
        {% endfor %}

    </div>

</div>

{% schema %}
    {
        "name": "tab Content List",
        "class": "tab-content-list",
        "settings": [
            {
                "type": "color",
                "id": "bg_color",
                "label": "Background Color",
                "default": "#f3f3f3"
            },
            {
                "type": "text",
                "id": "heading",
                "label": "Heading"
            }
        ],
        "blocks": [
            {
                "type": "slide",
                "name": "Tab",
                "settings": [
                   
                    {
                        "type": "header",
                        "content": "Left Content"
                    },
                    {
                        "type": "image_picker",
                        "id": "left_image",
                        "label": "Left Image"
                    },
                    {
                        "type": "text",
                        "id": "tab_title",
                        "label": "Tab Title"
                    },
                    {
                        "type": "html",
                        "id": "left_list",
                        "label": "List Items",
                        "info": "Add a <br> for new list item"
                    },
                    {
                        "type": "header",
                        "content": "Roght Content"
                    },
                    {
                        "type": "image_picker",
                        "id": "right_image",
                        "label": "right_image"
                    },
                    {
                        "type": "html",
                        "id": "right-list",
                        "label": "List Items",
                        "info": "Add a <br> for new list item"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Tab Content List"
            }
        ]
    }
{% endschema %}