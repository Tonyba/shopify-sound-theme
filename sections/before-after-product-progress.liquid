                  {
                    "type": "header",
                    "content": "Before/After Images"
                  },
                  {
                    "type": "text",
                    "id": "before_text",
                    "label": "Before Text",
                    "default": "Before"
                  },
                  {
                    "type": "image_picker",
                    "id": "before_image",
                    "label": "Before Image"
                  },
                  {
                    "type": "text",
                    "id": "after_text",
                    "label": "After Text",
                    "default": "After"
                  },
                  {
                    "type": "image_picker",
                    "id": "after_image",
                    "label": "After Image"
