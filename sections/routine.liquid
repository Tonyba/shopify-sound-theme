{{ 'routine.css' | asset_url | stylesheet_tag }}


<div class="container">

    <div class="headings">
        <div class="subheading">{{ section.settings.subheading }}</div>
        <h2 class="heading" >{{ section.settings.heading }}</h2>
    </div>


    <div class="grid cols-2 gap-40">
        <div class="grid-item">
            <figure style="{% if section.settings.img_max_height > 0  %} max-height: {{ section.settings.img_max_height }}  {% endif %}" >
                {{- section.settings.image | image_url: width: section.settings.image.width | image_tag: loading: 'lazy', decoding: 'async' , draggable: false -}}
            </figure>
            
        </div>
        <div class="grid-item">
            {% for step in section.blocks %}
                <div class="step-item">
                    <h3>{{ step.settings.heading }}</h3>
                    <h4>{{ step.settings.subheading }}</h4>
                    <p>{{ step.settings.text }}</p>
                </div>
            {% endfor %}
        </div>
    </div>

</div>

{% schema %}
    {
        "name": "Routine",
        "class": "routine",
        "settings": [
            {
                "type": "image_picker",
                "label": "Image",
                "id": "image"
            },
            {
                "type": "number",
                "id": "img_max_height",
                "label": "Image Max Height",
                "default": 0
            },
            {
                "type": "text",
                "id": "heading",
                "label": "Heading"
            },
            {
                "type": "text",
                "id": "subheading",
                "label": "Subheading"
            }
        ],
        "blocks": [
            {
               "type": "slide",
               "name": "Step",
               "settings": [
                {
                    "type": "text",
                    "id": "heading",
                    "label": "Heading"
                },
                {
                    "type": "text",
                    "id": "subheading",
                    "label": "Subheading"
                },
                {
                    "type": "textarea",
                    "id": "text",
                    "label": "Text"
                }
               ]
            }
        ],
        "presets": [
            {
              "name": "routine"
            }
        ]
    }
{% endschema %}