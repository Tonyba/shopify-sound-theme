{{ 'safety-body-parts.css' | asset_url | stylesheet_tag }}


<div class="section-wrapper-padding relative" style="background-color: {{ section.settings.bg_color }}" >

    <div class="container">
        <h2>{{ section.settings.heading }}</h2>
        <div class="inner-container">
            <div class="grid cols-3 gap-40">
                {% for body_p in section.blocks %}
                    <div class="body-part">
                        <div class="body-icon">{{ body_p.settings.icon }}</div>
                        <h3> {{  body_p.settings.title  }} </h3>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="left-img">
            {{- section.settings.left_img | image_url: width: section.settings.left_img.width | image_tag: loading: 'lazy', decoding: 'async' , draggable: false -}}
        </div>
        <div class="right-img">
            {{- section.settings.right_img | image_url: width: section.settings.right_img.width | image_tag: loading: 'lazy', decoding: 'async' , draggable: false -}}
        </div>
    </div>

</div>


{% schema %}
    {
        "name": "Safety Body Parts",
        "class": "safety-body-parts",
        "settings": [
            {
                "type": "color",
                "label": "Background Color",
                "id": "bg_color",
                "default": "#f3f3f3"
            },
            {
                "type": "text",
                "id": "heading",
                "label": "Heading"
            },
            {
                "type": "image_picker",
                "label": "Left Image",
                "id": "left_img"
            },
            {
                "type": "image_picker",
                "label": "Right Image",
                "id": "right_img"
            }
        ],
        "blocks": [
            {
                "type": "slide",
                "name": "Body Part",
                "settings": [
                    {
                        "type": "text",
                        "label": "Title",
                        "id": "title"
                    },
                    {
                        "type": "html",
                        "label": "Icon",
                        "id": "icon"
                    }

                ]
            }
        ],
        "presets": [
            {
              "name": "Safety Body Parts"
            }
        ]
    }
{% endschema %}