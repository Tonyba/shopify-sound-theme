{{ 'press-carousel.css' | asset_url | stylesheet_tag }}
{{ 'splide.min.css' | asset_url | stylesheet_tag }}

<div class="section-wrapper">
    <div class="headings center">
        <div class="subheading uppercase">{{ section.settings.subheading }}</div>
        <h2>{{ section.settings.heading }}</h2>
    </div>
 
    <div class="splide press-carousel">
        <div class="splide__track">
            <div class="splide__list">
                {% for press in section.blocks %}
                    <div class="splide__slide">
                        <p> {{ press.settings.text }}</p>
                        {{- press.settings.image | image_url: width: press.settings.image.width | image_tag: loading: 'lazy', decoding: 'async' , draggable: false -}}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>

<script defer>

</script>

{% schema %}
    {
        "name": "Press Carousel",
        "class": "press-carouse-wrapper",
        "settings": [
            {
                "type": "text",
                "id": "heading",
                "label": "Heading"
            },
            {
                "type": "text",
                "id": "subheading",
                "label": "Subheading"
            }
        ],
        "blocks": [
            {
                "type": "slide",
                "name": "Press Item",
                "settings": [
                    {
                        "id": "text",
                        "label": "Press Text",
                        "type": "textarea"
                    },
                    {
                        "id": "image",
                        "label": "Image",
                        "type": "image_picker"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Press Carousel"
            }
        ]
    }
{% endschema %}