{{ 'press-carousel.css' | asset_url | stylesheet_tag }}

<div class="section-wrapper">
    <div class="headings">
        <div class="subheading">{{ section.settings.subheading }}</div>
        <h2>{{ section.settings.heading }}</h2>
    </div>
 
    <div class="splide press-carousel">
        <div class="splide__track">
            <div class="splide__list">
                <div class="splide__slide"></div>
            </div>
        </div>
    </div>
</div>

<script defer>

</script>

{% schema %}
    {
        "name": "Press Carousel",
        "class": "press-carouse-wrapper",
        "settings": [
            {
                "type": "text",
                "id": "heading",
                "label": "Heading"
            },
            {
                "type": "text",
                "id": "subheading",
                "label": "Subheading"
            }
        ],
        "blocks": [
            {
                "type": "slide",
                "name": "Press Item",
                "settings": [
                    {
                        "id": "text",
                        "label": "Press Text",
                        "type": "textarea"
                    },
                    {
                        "id": "image",
                        "label": "Image",
                        "type": "image_picker"
                    }
                ]
            }
        ],
        "presets": []
    }
{% endschema %}