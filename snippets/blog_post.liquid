<div class="post_loop_item">
    <div class="post-cat"> {%  for tag in post.tags %} {{ tag }} {%  endfor %}</div>
    <div class="post-date">{{ post.created_at | date: "%d/%m/%y" }}</div>
    <h3 class="post-title"><a href="{{ post.url }}">{{ post.title }}</a></h3>

<a href="{{ post.url }}" > 
 {{- post.image | image_url: width: post.image.width | image_tag: loading: 'lazy', decoding: 'async' , draggable: false -}} 
</a>
</div>  